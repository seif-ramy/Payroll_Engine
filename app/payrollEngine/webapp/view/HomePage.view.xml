<mvc:View xmlns:cards="sap.f.cards" controllerName="sp.payrollEngine.controller.HomePage"
    xmlns:mvc="sap.ui.core.mvc" 
    displayBlock="true"
    xmlns="sap.m"
    xmlns:f="sap.f"
    xmlns:core="sap.ui.core"
    xmlns:tnt="sap.tnt"
    xmlns:u="sap.ui.unified">
    <tnt:ToolPage id="toolPage" sideExpanded="false">
            <tnt:sideContent>
            <tnt:SideNavigation id="sideNavigation">
                <tnt:NavigationList id="navigationList" itemSelect="onItemSelect" >
                    <tnt:items>
                        <tnt:NavigationListItem id="_IDGenNavigationListItem0" icon="sap-icon://menu2" key="Toggle"/>
                        <tnt:NavigationListItem id="_IDGenNavigationListItem1" text="Home" icon="sap-icon://home" key="home"/>
                        <tnt:NavigationListItem id="_IDGenNavigationListItem2" text="Payroll Operation Center" icon="sap-icon://lead" key="PayrollProcessing"/>
                        <tnt:NavigationListItem id="_IDGenNavigationListItem3" text="People" icon="sap-icon://group" key="people"/>
                        <tnt:NavigationListItem id="_IDGenNavigationListItem4" text="Third Party Integration" icon="sap-icon://home" key="thirdPartyIntegration"/>
                        <tnt:NavigationListItem id="_IDGenNavigationListItem5" text="Reports" icon="sap-icon://expense-report" key="reports"/>
                        <tnt:NavigationListItem id="_IDGenNavigationListItem6" text="General Settings" icon="sap-icon://settings">
                            <tnt:items>
                                <tnt:NavigationListItem id="_IDGenNavigationListItem7" text="Taxes" icon="sap-icon://money-bills" key="taxes"/>
                                <tnt:NavigationListItem id="_IDGenNavigationListItem8" text="Social Insurance" icon="sap-icon://insurance-life" key="socialInsurance"/>
                                <tnt:NavigationListItem id="_IDGenNavigationListItem9" text="Gratuity" key="gratuity"/>
                                <tnt:NavigationListItem id="_IDGenNavigationListItem10" text="Absences" key="absences"/>
                                <tnt:NavigationListItem id="_IDGenNavigationListItem11" text="Wage Types" key="wageTypes"/>
                                <tnt:NavigationListItem id="_IDGenNavigationListItem12" text="Loans" icon="sap-icon://loan" key="loans"/>
                                <tnt:NavigationListItem id="_IDGenNavigationListItem13" text="Mapping" key="mapping"/>
                            </tnt:items>
                        </tnt:NavigationListItem>
                    </tnt:items>
                </tnt:NavigationList>
            </tnt:SideNavigation>
        </tnt:sideContent>
        <tnt:mainContents>
            <VBox id="mainContentVBox" height="100%">
                <ScrollContainer id="_IDGenScrollContainer1" height="100%" vertical="true">
                    <VBox id="_IDGenVBox1" height="100%">
                        <HBox id="_IDGenHBox1" justifyContent="SpaceBetween" alignItems="Center" class="headerBox">
                            <Image id="logoImage" src="images/RaptorsLogoWhite.png" alt="Raptors Logo" class="headerImage"/>
                            <HBox id="_IDGenHBox9" justifyContent="SpaceBetween" class="searchContainer">
                                <HBox id="_IDGenHBox10" width="20%"/> <!-- Adjust width as needed to fine-tune position -->
                                <SearchField id="searchField" width="250%" placeholder="Search..." class="searchField"/>
                                <HBox id="_IDGenHBox11" width="50%"/>
                            </HBox>
                            <HBox id="_IDGenHBox2" justifyContent="End">
                                <Button id="_IDGenButton1" icon="images/tickets.png" class="transparentBackgroundButton" press="onTicketButtonClick"></Button>
                                <Button id="_IDGenButton2" icon="images/notf.png" class="transparentBackgroundButton" press="onNotificationButtonClick"></Button>
                                <Button id="_IDGenButton3" icon="images/login.png" class="transparentBackgroundButton" press="onProfileSettingButtonClick"></Button>
                            </HBox>
                        </HBox>
                        <!-- Top Tiles -->
                        <VBox id="_IDGenVBox2">
                            <HBox id="_IDGenHBox3" justifyContent="SpaceAround" class="tileContainer">
                                <GenericTile id="_IDGenGenericTile1" header="Total Employees" subheader="32 New Hires, 3 Terminations" frameType="TwoByOne" class="sapUiTinyMargin">
                                    <TileContent id="_IDGenTileContent1">
                                        <NumericContent id="_IDGenNumericContent1" value="254" valueColor="Good" indicator="Up" />
                                        <Text id="_IDGenText2" text="+3.21% from last month" class="tileText"/>
                                    </TileContent>
                                </GenericTile>
                                <GenericTile id="_IDGenGenericTile2" header="Total Upcoming Payroll Costs" subheader="Salaries, Overtime, Benefits, Taxes" frameType="TwoByOne" class="sapUiTinyMargin">
                                    <TileContent id="_IDGenTileContent2">
                                        <NumericContent id="_IDGenNumericContent2" value="$33,520" valueColor="Critical" indicator="Down" />
                                        <Text id="_IDGenText3" text="-2.1% from last month" class="tileText"/>
                                    </TileContent>
                                </GenericTile>
                                <GenericTile id="_IDGenGenericTile3" header="Total Employees" subheader="32 New Hires, 3 Terminations" frameType="TwoByOne" class="sapUiTinyMargin">
                                    <TileContent id="_IDGenTileContent3">
                                        <NumericContent id="_IDGenNumericContent3" value="254" valueColor="Good" indicator="Up" />
                                        <Text id="_IDGenText4" text="+3.21% from last month" class="tileText"/>
                                    </TileContent>
                                </GenericTile>
                            </HBox>
                        </VBox>
                        <f:GridContainer id="_IDGenGridContainer1" width="100%" containerQuery="true" layout="Fixed">
                            <!-- Upcoming Payroll Panel -->
                            <Panel id="_IDGenPanel1" headerText="Upcoming Payroll" class="sapUiTinyMargin sapUiContentPadding">
                                <layoutData>
                                    <f:GridContainerItemLayoutData id="_IDGenGridContainerItemLayoutData1" columns="3"/>
                                </layoutData>
                                <HBox id="_IDGenHBox4" justifyContent="SpaceBetween">
                                    <VBox id="_IDGenVBox3">
                                        <Text id="_IDGenText5" text="Pay Period" class="sapUiTinyMarginBottom"/>
                                        <Text id="_IDGenText6" text="26/05 â†’ 26/06" class="sapUiTinyMarginBottom"/>
                                    </VBox>
                                    <VBox id="_IDGenVBox4">
                                        <Button id="_IDGenButton5" text="Off-Cycle Payroll" press="onOffCyclePayroll" class="sapUiTinyMarginBottom"/>
                                        <Button id="_IDGenButton6" text="Calculate Paycheck" press="onCalculatePaycheck" class="sapUiTinyMarginBottom"/>
                                        <Button id="_IDGenButton7" text="Run Payroll" type="Emphasized" press="onRunPayroll" class="sapUiTinyMarginBottom"/>
                                    </VBox>
                                </HBox>
                            </Panel>

                            <!-- Payroll Cost Distribution Panel -->
                            <Panel id="_IDGenPanel2" headerText="Payroll Cost Distribution" class="sapUiTinyMargin sapUiContentPadding">
                                <layoutData>
                                    <f:GridContainerItemLayoutData id="_IDGenGridContainerItemLayoutData2" columns="3"/>
                                </layoutData>
                                <HBox id="_IDGenHBox5">
                                    <core:Icon id="_IDGenIcon1" src="sap-icon://pie-chart"/>
                                    <VBox id="_IDGenVBox5">
                                        <Text id="_IDGenText7" text="Salaries: 25.37M" class="sapUiTinyMargin"/>
                                        <Text id="_IDGenText8" text="Overtime: 7.61M" class="sapUiTinyMargin"/>
                                        <Text id="_IDGenText9" text="Benefits: 15.22M" class="sapUiTinyMargin"/>
                                        <Text id="_IDGenText10" text="Taxes: 2.54M" class="sapUiTinyMargin"/>
                                    </VBox>
                                </HBox>
                            </Panel>

                            <!-- Critical Alerts Panel -->
                            <Panel id="_IDGenPanel3" headerText="Critical Alerts" class="sapUiTinyMargin sapUiContentPadding">
                                <layoutData>
                                    <f:GridContainerItemLayoutData id="_IDGenGridContainerItemLayoutData3" columns="3"/>
                                </layoutData>
                                <VBox id="_IDGenVBox6">
                                    <HBox id="_IDGenHBox6">
                                        <core:Icon id="_IDGenIcon2" src="sap-icon://alert" color="red"/>
                                        <Text id="_IDGenText11" text="Missing Bank Details for Jane Doe"/>
                                        <Button id="_IDGenButton8" text="Open" press="onOpenAlert"/>
                                    </HBox>
                                    <HBox id="_IDGenHBox7">
                                        <core:Icon id="_IDGenIcon3" src="sap-icon://alert" color="red"/>
                                        <Text id="_IDGenText12" text="Process Payroll for John Doe"/>
                                        <Button id="_IDGenButton9" text="Open" press="onOpenAlert"/>
                                    </HBox>
                                    <HBox id="_IDGenHBox8">
                                        <core:Icon id="_IDGenIcon4" src="sap-icon://alert" color="red"/>
                                        <Text id="_IDGenText13" text="Missing Social Insurance for Jane Doe"/>
                                        <Button id="_IDGenButton10" text="Open" press="onOpenAlert"/>
                                    </HBox>
                                    <Button id="_IDGenButton11" text="View All Alerts" press="onViewAllAlerts"/>
                                </VBox>
                            </Panel>

                            <!-- Payroll Calendar Panel -->
                            <Panel id="_IDGenPanel4" headerText="Payroll Calendar" class="sapUiTinyMargin sapUiContentPadding">
                                <layoutData>
                                    <f:GridContainerItemLayoutData id="_IDGenGridContainerItemLayoutData4" columns="3"/>
                                </layoutData>
                                <u:Calendar id="calendar" intervalSelection="true"/>
                                <u:CalendarLegend id="legend"/>
                            </Panel>

                            <!-- Payroll History Panel -->
                            <Panel id="_IDGenPanel5" headerText="Payroll History" class="sapUiTinyMargin sapUiContentPadding">
                                <layoutData>
                                    <f:GridContainerItemLayoutData id="_IDGenGridContainerItemLayoutData5" columns="3"/>
                                </layoutData>
                                <VBox id="_IDGenVBox7">
                                    <Text id="_IDGenText14" text="Biweekly - Check date: Nov 11 - $12,968.47"/>
                                    <Text id="_IDGenText15" text="Biweekly - Check date: Nov 11 - $12,968.46"/>
                                    <Text id="_IDGenText16" text="Biweekly - Check date: Nov 11 - $12,620.19"/>
                                    <Button id="_IDGenButton12" text="View Full Report" press="onViewFullReport"/>
                                </VBox>
                            </Panel>
                        </f:GridContainer>
                    </VBox>
                </ScrollContainer>
            </VBox>
        </tnt:mainContents>
    </tnt:ToolPage>
</mvc:View>