<mvc:View xmlns:imageeditor="sap.suite.ui.commons.imageeditor" controllerName="sp.payrollEngine.controller.payrollEngineController"
    xmlns:mvc="sap.ui.core.mvc" displayBlock="true"
    xmlns="sap.m"
	xmlns:f="sap.f"
	xmlns:core="sap.ui.core"
	xmlns:tnt="sap.tnt"
	xmlns:unified="sap.ui.unified"
	xmlns:l="sap.ui.layout"
	>
	<PlanningCalendar id="PCID"
	singleSelection="false"
			showIntervalHeaders="false"
			builtInViews="One Month"
			startDate="{path: '/startDate'}"
					rows="{path: '/people'}"
				appointmentsVisualization="Filled" 
				showWeekNumbers="true" 
			    showEmptyIntervalHeaders="false"
				stickyHeader="true"
					class="sapMPlanCalSuppressAlternatingRowColors"
					viewChange="handleViewChange"
					legend="PlanningCalendarLegend"
					specialDates="{path: '/specialDates', templateShareable: false}"

				>			
                <toolbarContent>
				<Button id="_IDGenButton1" text="Create" type="Default" ></Button>
			</toolbarContent>
            <rows>
			<PlanningCalendarRow id="_IDGenPlanningCalendarRow1"
							icon="{pic}"
							title="{name}"
							text="{role}"
							specialDates="{path : 'specialDates', templateShareable: false}"
							appointments="{path : 'appointments', templateShareable: false}"
							intervalHeaders="{path: 'headers', templateShareable: false}">
						<specialDates>
							<unified:DateTypeRange id="_IDGenDateTypeRange1"
								startDate="{start}"
								endDate="{end}"
								type="{type}"/>
						</specialDates>
						<appointments>
							<unified:CalendarAppointment id="_IDGenCalendarAppointment2"
									startDate="{start}"
									endDate="{end}"
									icon="{pic}"
									title="{title}"
									text="{info}"
									type="{type}"
									tentative="{tentative}">
							</unified:CalendarAppointment>
						</appointments>
						<intervalHeaders>
							<unified:CalendarAppointment id="_IDGenCalendarAppointment1"
									startDate="{start}"
									endDate="{end}"
									icon="{pic}"
									title="{title}"
									type="{type}"
									>
							</unified:CalendarAppointment>
						</intervalHeaders>
					</PlanningCalendarRow>
			</rows>
				<specialDates>
					<unified:DateTypeRange id="_IDGenDateTypeRange2"
							startDate="{start}"
							endDate="{end}"
							type="{type}"
							color="{color}">
					</unified:DateTypeRange>
				</specialDates>
                </PlanningCalendar>

</mvc:View>
