{
  "name": "Payroll_Engine",
  "version": "1.0.0",
  "description": "A simple CAP project.",
  "repository": "<Add your repository here>",
  "license": "UNLICENSED",
  "private": true,
  "dependencies": {
    "@sap-cloud-sdk/http-client": "^3.15.0",
    "@sap-cloud-sdk/resilience": "^3.15.0",
    "@sap/cds": "^7",
    "@sap/cds-hana": "^2",
    "@sap/cds-mtxs": "^1.9",
    "@sap/xssec": "^3",
    "express": "^4",
    "passport": "^0.7.0"
  },
  "devDependencies": {
    "@cap-js/sqlite": "^1",
    "@sap/cds-dk": "^7"
  },
  "scripts": {
    "start": "cds-serve"
  },
  "cds": {
    "profile": "with-mtx-sidecar",
    "requires": {
      "multitenancy": true,
      "auth": "dummy",
      "db": "hana",
      "messaging": {
        "kind": "enterprise-messaging"
      },
      "PLTUserManagement": {
        "kind": "odata-v2",
        "model": "srv/external/PLTUserManagement",
        "credentials": {
          "destination": "SF_SalesDemo",
          "path": "/odata/v2/User"
        }
      },
      "ECCompensationInformation": {
        "kind": "odata-v2",
        "model": "srv/external/ECCompensationInformation"
      }
    },
    "features": {
      "kibana_formatter": true
    }
  }
}